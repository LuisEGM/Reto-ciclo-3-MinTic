@page
@model SoccerTournametManager.App.Frontend.Pages.Estadios.IndexModel
@{
}
<h1>Listado de estadios</h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Direccion</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var estadio in Model.estadios)
    {
        <tr>
            <th scope="row">@estadio.Id</th>
            <td>@estadio.Nombre</td>
            <td>@estadio.Direccion</td>
            <td>
              <a class="btn btn-primary" asp-page="./Details" asp-route-id="@estadio.Id">Detalle</a>
            </td>
        </tr>
    }
  </tbody>
</table>