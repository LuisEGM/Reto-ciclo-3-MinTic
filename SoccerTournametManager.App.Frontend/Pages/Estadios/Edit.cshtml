@page
@model SoccerTournametManager.App.Frontend.Pages.Estadios.EditModel
@{
}
<h1>Editar estadio</h1>
<form method="post">
    <div class="form-group">
        <label for="idEstadio">Identificacion</label>
        <input id="idEstadio" type="text" name="idEstadio" value="@Model.estadio.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input id="nombre" type="text" name="nombre" value="@Model.estadio.Nombre" class="form-control">
        <span asp-validation-for="estadio.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="direccion">Direccion</label>
        <input id="direccion" type="text" name="direccion" value="@Model.estadio.Direccion" class="form-control">
        <span asp-validation-for="estadio.Direccion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="idMunicipio">Municipio</label>
        <select name="idMunicipio" id="idMunicipio" class="form-control">
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.Id">@municipio.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Editar estadio</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>