@page
@model SoccerTournametManager.App.Frontend.Pages.Equipos.AddDirectorTecnicoModel
@{
}
<h1>Asignar director tecnico</h1>
<form method="post">
    <div class="form-group">
        <label for="idEquipo">Paciente</label>
        <input id="idEquipo" type="text" name="idEquipo" value="@Model.equipo.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="idDT">Director tecnico</label>
        <select name="idDT" id="idDT" class="form-control">
            @foreach (var DT in Model.DTs)
            {
                <option value="@DT.Id">@DT.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar DT</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>