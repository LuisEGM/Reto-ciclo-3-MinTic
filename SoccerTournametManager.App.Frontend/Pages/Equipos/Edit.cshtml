@page
@model SoccerTournametManager.App.Frontend.Pages.Equipos.EditModel
@{
}
<h1>Editar equipo</h1>
<form method="post">
    <div class="form-group">
        <label for="idEquipo"></label>
        <input id="idEquipo" type="text" name="idEquipo" value="@Model.equipo.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="nombre"></label>
        <input id="nombre" type="text" name="nombre" value="@Model.equipo.Nombre" class="form-control">
        <span asp-validation-for="equipo.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="idMunicipio">Municipio</label>
        <select name="idMunicipio" id="idMunicipio" class="form-control">
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.Id">@municipio.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="idDT">Director tecnico</label>
        <select name="idDT" id="idDT" class="form-control">
            @foreach (var DT in Model.DTs)
            {
                <option value="@DT.Id">@DT.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Editar equipo</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>