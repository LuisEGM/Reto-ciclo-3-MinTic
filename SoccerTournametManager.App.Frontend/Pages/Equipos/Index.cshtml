@page
@model SoccerTournametManager.App.Frontend.Pages.Pacientes.IndexModel
@{
}
<h1>Listado de equipos</h1>

<form method="get">
  <div class="row">
    <div class="col-md-6">
      <a class="btn btn-primary" asp-page="./Create">Nuevo equipo</a>      
    </div>
    <div class="col-md-6 d-flex justify-content-end">
      <div class="form-group mb-2">
        <input name="b" id="b" class="form-control" placeholder="Nombre..." asp-for="@Model.bActual">
      </div>
      <button type="submit" class="btn btn-primary mb-2 ml-2">Buscar</button>
    </div>
</form>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Municipio</th>
      <th scope="col">Director Tecnico</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var equipo in Model.equipos)
    {
        <tr>
            <th scope="row">@equipo.Id</th>
            <td>@equipo.Nombre</td>
            @if (equipo.Municipio == null) {
              <td>
                <a class="btn btn-primary" asp-page="./AddMunicipio" asp-route-id="@equipo.Id">Agregar minicipio</a>
              </td>
            }
            else {
              <td>@equipo.Municipio.Nombre</td>
            }
            @if (equipo.DirectorTecnico == null) {
              <td>
                <a class="btn btn-primary" asp-page="./AddDirectorTecnico" asp-route-id="@equipo.Id">Agregar tecnico</a>
              </td>
            }
            else {
              <td>@equipo.DirectorTecnico.Nombre</td>
            }
            <td>
              <a class="btn btn-primary" asp-page="./Details" asp-route-id="@equipo.Id">Detalle</a>
              <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@equipo.Id">Editar</a>
            </td>
        </tr>
    }
  </tbody>
</table>