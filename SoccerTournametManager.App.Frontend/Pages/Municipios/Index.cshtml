@page
@model SoccerTournametManager.App.Frontend.Pages.Municipios.IndexModel
@{
}
<h1>Listado de municipios</h1>

<a class="btn btn-primary" asp-page="./Create">Nuevo municipio</a>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var municipio in Model.municipios)
    {
        <tr>
            <th scope="row">@municipio.Id</th>
            <td>@municipio.Nombre</td>
            <td>
              <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@municipio.Id">Editar</a>
            </td>
        </tr>
    }
  </tbody>
</table>