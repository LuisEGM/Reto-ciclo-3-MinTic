@page
@model SoccerTournametManager.App.Frontend.Pages.Arbitros.IndexModel
@{
}
<h1>Listado de arbitros</h1>


<form method="get">
  <div class="row">
    <div class="col-md-6">
      <a class="btn btn-primary" asp-page="./Create">Nuevo arbitro</a>    
    </div>
    <div class="col-md-6 d-flex justify-content-end">
      <div class="form-group mb-2">
        <input name="b" id="b" class="form-control" placeholder="Nombre..." asp-for="@Model.bActual">
      </div>
      <button type="submit" class="btn btn-primary mb-2 ml-2">Buscar</button>
    </div>
</form>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Documento</th>
      <th scope="col">Telefono</th>
      <th scope="col">Colegio</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var arbitro in Model.arbitros)
    {
        <tr>
            <th scope="row">@arbitro.Id</th>
            <td>@arbitro.Nombre</td>
            <td>@arbitro.Documento</td>
            <td>@arbitro.Telefono</td>
            <td>@arbitro.Colegio</td>
            <td>
              <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@arbitro.Id">Editar</a>
            </td>
        </tr>
    }
  </tbody>
</table>