@page
@model SoccerTournametManager.App.Frontend.Pages.NovedadesDePartidos.AddPartidoModel
@{
}
<h1>Asignar partido</h1>
<form method="post">
    <div class="form-group">
        <label for="idNovedad">Novedad</label>
        <input id="idNovedad" type="text" name="idNovedad" value="@Model.novedadPartido.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="idPartido">Partidos</label>
        <select name="idPartido" id="idPartido" class="form-control">
            @foreach (var partido in Model.partidos)
            {
                <option value="@partido.Id">@partido.EquipoLocal.Nombre VS @partido.EquipoVisitante.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar equipo</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>