@page
@model SoccerTournametManager.App.Frontend.Pages.NovedadesDePartidos.AddJugadorInvolucradoModel
@{
}
<h1>Asignar jugador involucrado</h1>
<form method="post">
    <div class="form-group">
        <label for="idNovedad">Novedad</label>
        <input id="idNovedad" type="text" name="idNovedad" value="@Model.novedadPartido.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="idJugador">Jugadores</label>
        <select name="idJugador" id="idJugador" class="form-control">
            @foreach (var jugador in Model.jugadores)
            {
                <option value="@jugador.Id">@jugador.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar jugador</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>