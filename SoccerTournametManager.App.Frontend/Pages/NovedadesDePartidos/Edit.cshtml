@page
@using SoccerTournametManager.App.Dominio
@model SoccerTournametManager.App.Frontend.Pages.NovedadesDePartidos.EditModel
@{
}
<h1>Editar novedad</h1>
<form method="post">
    <div class="form-group">
        <label for="idNovedad"></label>
        <input id="idNovedad" type="text" name="idNovedad" value="@Model.novedadPartido.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="minuto"></label>
        <input id="minuto" type="number" name="minuto" value="@Model.novedadPartido.Minuto" class="form-control">
        <span asp-validation-for="novedadPartido.Minuto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="novedad"></label>
        <select id="novedad" name="novedad" class="form-control">    
            <option value="0">Tarjeta amarilla</option>
            <option value="1">Tarjeta roja</option>
            <option value="2">Anotación</option>
        </select>
    </div>
    <div class="form-group">
        <label for="idJugador">Jugador</label>
        <select name="idJugador" id="idJugador" class="form-control">
            @foreach (var jugador in Model.jugadores)
            {
                <option value="@jugador.Id">@jugador.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="idPartido">Partido</label>
        <select name="idPartido" id="idPartido" class="form-control">
            @foreach (var partido in Model.partidos)
            {
                <option value="@partido.Id">@partido.EquipoLocal.Nombre VS @partido.EquipoVisitante.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Editar novedad</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>