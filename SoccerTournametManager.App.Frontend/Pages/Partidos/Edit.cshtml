@page
@model SoccerTournametManager.App.Frontend.Pages.Partidos.EditModel
@{
}
<h1>Editar partido</h1>
<form method="post">
    <div class="form-group">
        <label for="idPartido"></label>
        <input id="idPartido" type="text" name="idPartido" value="@Model.partido.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="fechaHora">Fecha</label>
        <input id="fechaHora" name="fechaHora" type="datetime-local" value="@DateTime.Today" class="form-control">
    </div>
    <div class="form-group">
        <label for="idEquipoLocal">Equipo local</label>
        <select name="idEquipoLocal" id="idEquipoLocal" class="form-control">
            @foreach (var equipo in Model.equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="idEquipoVisitante">Equipo visitante</label>
        <select name="idEquipoVisitante" id="idEquipoVisitante" class="form-control">
            @foreach (var equipo in Model.equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="idEstadio">Estadio</label>
        <select name="idEstadio" id="idEstadio" class="form-control">
            @foreach (var estadio in Model.estadios)
            {
                <option value="@estadio.Id">@estadio.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="idArbitro">Arbitro</label>
        <select name="idArbitro" id="idArbitro" class="form-control">
            @foreach (var arbitro in Model.arbitros)
            {
                <option value="@arbitro.Id">@arbitro.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Editar partido</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>