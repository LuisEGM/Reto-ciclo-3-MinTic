@page
@model SoccerTournametManager.App.Frontend.Pages.Partidos.IndexModel
@{
}
<h1>Lista de Partidos</h1>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">EquipoLocal</th>
      <th scope="col">EquipoVisitante</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var partido in Model.partidos)
    {
        <tr>
            <th scope="row">@partido.Id</th>
            <td>@partido.EquipoLocal.Nombre</td>
            <td>@partido.EquipoVisitante.Nombre</td>
            <td>
              <a class="btn btn-primary" asp-page="./Details" asp-route-id="@partido.Id">Detalle</a>
            </td>
        </tr>
    }
  </tbody>
</table>